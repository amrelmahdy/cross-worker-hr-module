<div class="box box-primary">
    <div class="box-header">
        <h3 class="box-title">Edit Benefit</h3>
    </div><!-- /.box-header -->
    <!-- form start -->
    <form method="post" action="/benefits/{{ bodyHolder._id }}" autocomplete="false" enctype="multipart/form-data">
        <div class="box-body">
            <div class="form-group">
                <label for="name">Title</label>
                <input type="text" id="name" name="title" class="form-control"  placeholder="Enter Name"
                       value="{{ bodyHolder.title }}">
            </div>

            {{#if bodyHolder.image}}
                <div class="col-md-12 text-center">
                    <img width="200" height="150" src="{{ bodyHolder.image }}" alt="{{bodyHolder.name}}"/>
                </div>
            {{/if}}

            <div class="form-group">
                <label for="image">Image</label>
                <input type="file" name="image" class="form-control" id="image"/>
            </div>


            <div class="form-group">
                <label for="short_desc">Description</label>
                <textarea name="description"   class="rich-editor form-control" id="description" placeholder="Description">
                   {{ bodyHolder.description }}
                </textarea>
            </div>

        </div><!-- /.box-body -->

        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>