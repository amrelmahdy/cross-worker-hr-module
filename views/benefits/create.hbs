<div class="box box-primary">
    <div class="box-header">
        <h3 class="box-title">Create A Benefit</h3>
    </div><!-- /.box-header -->
    <!-- form start -->
    <form method="post" action="/benefits/create" autocomplete="false" enctype="multipart/form-data">
        <div class="box-body">
            <div class="form-group">
                <label for="name1">Title</label>
                <input type="text" name="title" class="form-control" id="exampleInputEmail1" placeholder="Enter Name">
            </div>

            <div class="form-group">
                <label for="image">Image</label>
                <input type="file" name="image" class="form-control" id="image" />
            </div>


            <div class="form-group">
                <label for="short_desc">Description</label>
                <textarea name="description" class="rich-editor form-control" id="description" placeholder="Description"></textarea>
            </div>

        </div><!-- /.box-body -->

        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>