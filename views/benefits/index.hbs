<div class="box">
    <div class="box-header">
        <div class="col-md-11">
            <div class="box-header">
                <h3 class="box-title">Manage Benefits</h3>
            </div><!-- /.box-header -->
        </div>

        <div class="col-md-1">
            <a href="/benefits/create" class="btn bg-olive btn-flat  btn-block">
                Add <i class="fa  fa-plus"></i>
            </a>
        </div>
    </div><!-- /.box-header -->
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
            <tr>
                <th class="text-center">Image</th>
                <th class="text-center">Title</th>
                <th class="text-center">Description</th>
                <th class="text-center">Control</th>
            </tr>
            </thead>
            <tbody>

            {{# each benefits }}
                <tr>
                    <td class="text-center">
                        <img src="{{image}}" class="img-circle img-table-cell" alt="User Image">
                    </td>
                    <td class="text-center">
                        {{ title }}
                    </td>

                    <td class="text-center">
                        {{sanitize description }}
                    </td>


                    <td class="text-center">
                        <a href="/benefits/{{_id}}/edit" class="btn btn-social-icon btn-bitbucket">
                            <i class="fa fa-edit"></i>
                        </a>

                        <a class="btn delete-ajax btn-social-icon btn-google-plus" data-url="/delete" data-model="benefit"
                           data-id={{ _id }}>
                            <i class="fa fa-trash-o"></i>
                        </a>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div><!-- /.box-body -->
</div><!-- /.box -->



